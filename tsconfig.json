{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "module": "esnext",
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
  },
  "include": ["src"]
}
